import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    Scanner entrada = new Scanner(System.in);
    
   Float nota1;
   Float nota2; 
   Float nota3;
   Float soma;
   Float media; 
    
   System.out.print("Digite a nota da primeira avaliação: ");
   nota1 = entrada.nextFloat();
   System.out.print("Digite a nota da segunda avaliação: ");
   nota2 = entrada.nextFloat();
   System.out.print("Digite a nota da terceira avalição: ");
   nota3 = entrada.nextFloat();
    
   soma = nota1 + nota2 + nota3;
   media = soma / 3;
    
   System.out.println("A média das três avalaiações é:" + media);
    if (media >=7){
      System.out.println("O aluno está APROVADO. "); 
    }else {
      System.out.println("O aluno está REPROVADO. ");
    }
  }
}
